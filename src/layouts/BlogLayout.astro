---
import Header from '../components/Header.astro';
import LeftNav from '../components/LeftNav.astro';
import TableOfContents from '../components/TableOfContents.astro';
import { siteConfig } from '../config/site';

interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
const isHomePage = Astro.url.pathname === '/' || Astro.url.pathname === '/index.html';
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={siteConfig.description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.css" />
    <link rel="stylesheet" href="/styles/global.css" />
    <script is:inline>
      (function () {
        try {
          const saved = localStorage.getItem('theme-preference');
          if (saved === 'light' || saved === 'dark') {
            document.documentElement.setAttribute('data-theme', saved);
          } else {
            document.documentElement.removeAttribute('data-theme');
          }
        } catch (error) {
          console.warn('Theme preference unavailable', error);
        }
      })();
    </script>
  </head>
  <body>
    <Header />
    <div class="main-container">
      {isHomePage && <LeftNav />}
      <main class="content-area">
        <article class="post-content">
          <slot />
        </article>
      </main>
      {!isHomePage && <TableOfContents content={content} />}
    </div>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }

  .main-container {
    display: flex;
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 2.5rem 4rem;
    min-height: calc(100vh - 72px);
    gap: 2.5rem;
  }

  .content-area {
    flex: 1;
    padding: 2.5rem 3rem;
    max-width: 760px;
    background: var(--content-background);
    border-radius: 24px;
    box-shadow: var(--layer-shadow);
    border: 1px solid color-mix(in srgb, var(--border-color) 70%, transparent);
  }

  /* 홈 화면: 왼쪽 네비가 있을 때 */
  .main-container:has(.left-nav) .content-area {
    margin-left: 0;
    margin-right: auto;
  }

  /* 글 상세 페이지: 오른쪽 목차가 있을 때 */
  .main-container:has(.toc) .content-area {
    margin-left: auto;
    margin-right: 0;
  }

  .post-content {
    line-height: 1.85;
    color: var(--text-primary);
    font-size: 1.02rem;
  }

  :global(.post-content h1) {
    font-size: clamp(2.25rem, 3vw, 2.75rem);
    margin-top: 2.5rem;
    margin-bottom: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  :global(.post-content h2) {
    font-size: clamp(1.65rem, 2.5vw, 2.1rem);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-weight: 650;
    color: var(--text-primary);
  }

  :global(.post-content h3) {
    font-size: clamp(1.3rem, 2vw, 1.6rem);
    margin-top: 2rem;
    margin-bottom: 0.9rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  :global(.post-content p) {
    margin-bottom: 1.15rem;
    color: var(--text-primary);
    letter-spacing: -0.002em;
  }

  :global(.post-content code) {
    background: var(--surface-muted);
    padding: 0.15rem 0.45rem;
    border-radius: 6px;
    font-size: 0.9em;
    border: 1px solid color-mix(in srgb, var(--surface-border) 65%, transparent);
  }

  :global(.post-content pre) {
    background: var(--surface-muted);
    padding: 1.2rem 1.35rem;
    border-radius: 14px;
    overflow-x: auto;
    margin: 1.75rem 0;
    border: 1px solid color-mix(in srgb, var(--surface-border) 65%, transparent);
  }

  :global(.post-content pre code) {
    background: none;
    padding: 0;
    font-size: 0.95rem;
  }

  :global(.post-content a) {
    color: var(--accent-color);
    text-decoration: none;
    border-bottom: 1px solid color-mix(in srgb, var(--accent-color) 35%, transparent);
    transition: color 0.2s ease, border-color 0.2s ease;
  }

  :global(.post-content a:hover) {
    color: color-mix(in srgb, var(--accent-color) 75%, white 25%);
    border-bottom-color: var(--accent-color);
  }

  :global(.post-content strong) {
    font-weight: 650;
    color: var(--text-primary);
  }

  :global(.post-content em) {
    font-style: italic;
    color: color-mix(in srgb, var(--text-secondary) 70%, var(--text-primary) 30%);
  }

  :global(.post-content ul),
  :global(.post-content ol) {
    margin: 1.15rem 0;
    padding-left: 1.5rem;
    color: var(--text-primary);
  }

  :global(.post-content li) {
    margin-bottom: 0.55rem;
  }

  :global(.post-content ul li::marker) {
    color: color-mix(in srgb, var(--accent-color) 70%, var(--text-secondary) 30%);
  }

  :global(.post-content blockquote) {
    margin: 1.5rem 0;
    padding: 1.1rem 1.35rem;
    background: var(--surface-alt);
    border-left: 4px solid var(--accent-color);
    border-radius: 14px;
    color: color-mix(in srgb, var(--text-secondary) 80%, var(--text-primary) 20%);
  }

  :global(.post-content hr) {
    border: none;
    border-top: 1px solid var(--surface-border);
    margin: 2.5rem 0;
  }

  :global(.post-content table) {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    margin: 1.75rem 0;
    font-size: 0.95rem;
    border: 1px solid var(--surface-border);
    border-radius: 12px;
    overflow: hidden;
  }

  :global(.post-content th),
  :global(.post-content td) {
    padding: 0.85rem 1rem;
    border-bottom: 1px solid color-mix(in srgb, var(--surface-border) 65%, transparent);
    text-align: left;
  }

  :global(.post-content th) {
    background: var(--surface-muted);
    font-weight: 600;
  }

  :global(.anchor-link) {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    color: inherit;
    text-decoration: none;
  }

  :global(.anchor-link:hover) {
    color: var(--accent-color);
  }

  @media (max-width: 1200px) {
    .main-container {
      padding: 0 1.75rem 3rem;
      gap: 1.5rem;
    }

    .content-area {
      padding: 2rem 2.25rem;
    }
  }

  @media (max-width: 1024px) {
    .main-container {
      padding: 0 1.25rem 3rem;
    }

    .content-area {
      padding: 1.75rem 1.8rem;
      border-radius: 20px;
    }
  }

  @media (max-width: 768px) {
    .main-container {
      padding: 0 1rem 2.5rem;
    }

    .content-area {
      padding: 1.5rem 1.35rem;
      border-radius: 16px;
      box-shadow: none;
      border: none;
    }
  }
</style>

