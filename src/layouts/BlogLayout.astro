---
import Header from '../components/Header.astro';
import LeftNav from '../components/LeftNav.astro';
import TableOfContents from '../components/TableOfContents.astro';

interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Leesin's Blog" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <Header />
    <div class="main-container">
      <LeftNav />
      <main class="content-area">
        <article class="post-content">
          <slot />
        </article>
      </main>
      <TableOfContents content={content} />
    </div>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  }

  .main-container {
    display: flex;
    max-width: 1400px;
    margin: 0 auto;
    min-height: calc(100vh - 80px);
  }

  .content-area {
    flex: 1;
    padding: 2rem 3rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .post-content {
    line-height: 1.8;
    color: var(--text-primary);
  }

  :global(.post-content h1) {
    font-size: 2.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 700;
    color: var(--text-primary);
  }

  :global(.post-content h2) {
    font-size: 2rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  :global(.post-content h3) {
    font-size: 1.5rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  :global(.post-content p) {
    margin-bottom: 1rem;
  }

  :global(.post-content code) {
    background: var(--bg-secondary);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  :global(.post-content pre) {
    background: var(--bg-secondary);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  :global(.post-content pre code) {
    background: none;
    padding: 0;
  }

  @media (max-width: 1024px) {
    .content-area {
      padding: 1.5rem;
    }
  }
</style>

