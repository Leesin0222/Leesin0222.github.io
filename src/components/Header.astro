<script>
  const STORAGE_KEY = 'theme-preference';
  const LABEL_MAP = {
    system: 'Í∏∞Î≥∏',
    light: 'ÎùºÏù¥Ìä∏',
    dark: 'Îã§ÌÅ¨',
  };
  const ICON_MAP = {
    system: 'üåó',
    light: '‚òÄÔ∏è',
    dark: 'üåô',
  };

  function applyTheme(theme, { persist = true } = {}) {
    const root = document.documentElement;

    if (theme === 'light') {
      root.setAttribute('data-theme', 'light');
    } else if (theme === 'dark') {
      root.setAttribute('data-theme', 'dark');
    } else {
      root.removeAttribute('data-theme');
    }

    if (persist) {
      localStorage.setItem(STORAGE_KEY, theme);
    }

    const label = document.getElementById('theme-selection');
    const icon = document.getElementById('theme-icon');
    const dropdown = document.getElementById('theme-dropdown');

    if (label) label.textContent = LABEL_MAP[theme];
    if (icon) icon.textContent = ICON_MAP[theme];
    if (dropdown) {
      dropdown.querySelectorAll('[data-theme-option]').forEach((option) => {
        option.classList.toggle('selected', option.getAttribute('data-theme-option') === theme);
      });
    }
  }

  function initThemeSwitcher() {
    const button = document.getElementById('theme-button');
    const dropdown = document.getElementById('theme-dropdown');
    if (!button || !dropdown) return;

    const storedTheme = localStorage.getItem(STORAGE_KEY) || 'system';
    applyTheme(storedTheme, { persist: false });

    const toggleDropdown = (expand) => {
      const shouldExpand = typeof expand === 'boolean' ? expand : button.getAttribute('aria-expanded') !== 'true';
      button.setAttribute('aria-expanded', shouldExpand ? 'true' : 'false');
      dropdown.classList.toggle('open', shouldExpand);
    };

    button.addEventListener('click', () => {
      toggleDropdown();
    });

    dropdown.querySelectorAll('[data-theme-option]').forEach((option) => {
      option.addEventListener('click', () => {
        const theme = option.getAttribute('data-theme-option') || 'system';
        applyTheme(theme);
        toggleDropdown(false);
      });
    });

    document.addEventListener('click', (event) => {
      if (!dropdown.contains(event.target) && !button.contains(event.target)) {
        toggleDropdown(false);
      }
    });

    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape') {
        toggleDropdown(false);
        button.focus();
      }
    });

    const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');
    mediaQuery.addEventListener('change', () => {
      const saved = localStorage.getItem(STORAGE_KEY) || 'system';
      if (saved === 'system') {
        applyTheme('system', { persist: false });
      }
    });
  }

  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', initThemeSwitcher, { once: true });
  }
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--header-background);
    border-bottom: 1px solid var(--border-color);
    padding: 0.75rem 2rem;
    backdrop-filter: blur(12px);
    background: color-mix(in srgb, var(--header-background) 90%, transparent);
  }

  :global(html[data-theme="dark"]) .header {
    background: color-mix(in srgb, var(--header-background) 90%, transparent);
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
  }

  .blog-title {
    margin: 0;
    font-size: 1.6rem;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  .blog-title a {
    text-decoration: none;
    color: var(--text-primary);
    transition: color 0.2s ease;
  }

  .blog-title a:hover {
    color: var(--accent-color);
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .theme-toggle {
    position: relative;
  }

  .theme-toggle-button {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.45rem 0.75rem;
    border-radius: 999px;
    border: 1px solid color-mix(in srgb, var(--border-color) 70%, transparent);
    background: color-mix(in srgb, var(--bg-secondary) 92%, transparent);
    color: var(--text-secondary);
    font-size: 0.85rem;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 1px 2px rgba(15, 23, 42, 0.08);
  }

  .theme-toggle-button:hover,
  .theme-toggle-button[aria-expanded="true"] {
    color: var(--text-primary);
    border-color: var(--accent-color);
    background: color-mix(in srgb, var(--bg-primary) 80%, var(--accent-color) 8%);
  }

  .theme-icon {
    font-size: 1rem;
    line-height: 1;
  }

  .theme-label {
    font-weight: 600;
  }

  .theme-selection {
    font-weight: 500;
    color: var(--text-secondary);
  }

  .theme-caret {
    width: 12px;
    height: 12px;
    stroke: currentColor;
    opacity: 0.7;
  }

  .theme-dropdown {
    position: absolute;
    right: 0;
    top: calc(100% + 0.5rem);
    min-width: 180px;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    box-shadow: var(--layer-shadow);
    padding: 0.4rem;
    list-style: none;
    margin: 0;
    display: none;
  }

  .theme-dropdown.open {
    display: block;
  }

  .theme-option {
    width: 100%;
    display: flex;
    gap: 0.6rem;
    padding: 0.55rem 0.65rem;
    border-radius: 10px;
    background: transparent;
    border: none;
    text-align: left;
    cursor: pointer;
    color: var(--text-secondary);
    transition: all 0.2s ease;
  }

  .theme-option:hover,
  .theme-option.selected {
    background: color-mix(in srgb, var(--bg-secondary) 80%, var(--accent-color) 10%);
    color: var(--text-primary);
  }

  .theme-option-icon {
    font-size: 1.1rem;
  }

  .theme-option-text {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }

  .theme-option-title {
    font-weight: 600;
    font-size: 0.92rem;
  }

  .theme-option-desc {
    font-size: 0.78rem;
    opacity: 0.7;
  }

  .header-links {
    display: flex;
    gap: 0.4rem;
    align-items: center;
  }

  .header-link {
    display: flex;
    align-items: center;
    gap: 0.45rem;
    text-decoration: none;
    color: var(--text-secondary);
    padding: 0.45rem 0.85rem;
    border-radius: 999px;
    transition: all 0.2s ease;
    font-size: 0.9rem;
    border: 1px solid transparent;
  }

  .header-link:hover {
    background: color-mix(in srgb, var(--bg-secondary) 92%, var(--accent-color) 12%);
    color: var(--text-primary);
    border-color: color-mix(in srgb, var(--accent-color) 45%, transparent);
  }

  .icon {
    font-size: 1.1rem;
  }

  @media (max-width: 1024px) {
    .header-container {
      gap: 1rem;
    }

    .header-right {
      gap: 0.75rem;
    }

    .header-links .link-text {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .header {
      padding: 0.75rem 1.25rem;
    }

    .theme-label {
      display: none;
    }

    .theme-selection {
      font-size: 0.8rem;
    }

    .theme-toggle-button {
      padding: 0.4rem 0.6rem;
    }
  }
</style>

